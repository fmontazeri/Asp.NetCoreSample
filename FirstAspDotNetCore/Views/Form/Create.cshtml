
@{
    ViewData["Title"] = "Create";
}



@section Styles{
    <link href="~/css/bootstrap-fileinput.css" rel="stylesheet" />
}


@{
    if (ViewBag.Person is PersonModel person)
    {
        <h1>Person Info</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name </th>
                    <th>Family </th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Family</td>
                    <td><img src="@person.Image" class="img-thumbnail" style="width: 90px" /></td>
                </tr>
            </tbody>
        </table>
    }
}
<h1>Create person</h1>
<div class="col-12">
    <form action="/Form/Create" method="post" enctype="multipart/form-data">
   
        <div class="col-md-9 float-left">
            <div class="form-group row">
                <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="Name" class="form-control" id="inputName" placeholder="Enter your name please"> @*readonly with form-control-plaintext*@
                </div>
            </div>
            <div class="form-group row">
                <label for="inputFamily" class="col-sm-2 col-form-label">Family</label>
                <div class="col-sm-10">
                    <input type="text" name="Family" class="form-control" id="inputFamily" placeholder="Enter your family please">
                </div>
            </div>
            @*<div class="form-group row">
                    <label for="inputImage" class="col-sm-2 col-form-label">Picture</label>
                    <div class="col-sm-10">
                        <input type="file" name="File" class="form-control" id="inputImage"  placeholder="Choose you image please">
                    </div>
                </div>*@


        </div>
     
            <div class="col-md-3 float-left">
                <label>Upload picture</label>
                <div class="col-md-12 form-group margin-bottom-40 padding-left-0 padding-right-0">
                    <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-new thumbnail" style="font-weight:bold">
                            <img src="~/images/NoImage.jpg" />
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail" style="height: 200px"> </div>
                        <div>
                            <span class="btn default btn-file">
                                <span class="fileinput-new btn btn-primary"> Choose your picture </span>
                                <span class="fileinput-exists btn btn-success"> Change picture </span>
                                <input type="file" name="File" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                            </span>
                            <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> Delete </a>
                        </div>
                    </div>
                </div>
            </div>

      
        <button type="submit" class="btn btn-primary mb-2">Add person</button>
    </form>
</div>
@section Scripts{
    <script src="~/js/bootstrap-fileinput.js"></script>
}